# Example environment variables for TravelMathLite (DO NOT COMMIT real secrets)
# Copy this file to `.env` in the `travelmathlite/` directory for local development.

# Django secret key - change in production
SECRET_KEY=change-me-local-dev

# Toggle debug (1 = True, 0 = False)
DJANGO_DEBUG=1

# Database URL - default to local sqlite file
# Examples:
# - SQLite: sqlite:///db.sqlite3
# - Postgres: postgres://user:pass@localhost:5432/dbname
DATABASE_URL=sqlite:///db.sqlite3

# Comma-separated allowed hosts for production
ALLOWED_HOSTS=127.0.0.1,localhost

# Email delivery URL (optional)
# Example: smtp://user:pass@smtp.example.com:587/?ssl=False
EMAIL_URL=

# WhiteNoise/static options
USE_WHITENOISE=1
USE_MANIFEST_STATIC=0
STATIC_ROOT=
MEDIA_ROOT=

# Optional 3rd-party integrations
SENTRY_DSN=

# Optional tuning
ROUTE_FACTOR=1.2
AVG_SPEED_KMH=80
FUEL_PRICE_PER_LITER=1.50
FUEL_ECONOMY_L_PER_100KM=7.5
