# .env.example - Template for environment variables
# Copy this file to .env and fill in your values

# Django settings
SECRET_KEY=your-secret-key-here
DEBUG=True
DJANGO_ENVIRONMENT=development
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# For development (SQLite - default)
DATABASE_URL=sqlite:///db.sqlite3

# For development with PostgreSQL (uncomment if needed)
# DB_NAME=cfmp_dev
# DB_USER=cfmp_user
# DB_PASSWORD=cfmp_password
# DB_HOST=localhost
# DB_PORT=5432

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/cfmp_db

# For Railway deployment (automatically provided)
# DATABASE_URL will be automatically set by Railway

# Cache (Redis - optional for development)
REDIS_URL=redis://127.0.0.1:6379/1

# Email settings
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production email (uncomment and configure)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=cfmp@example.com

# Static and media files
STATIC_ROOT=staticfiles
STATIC_URL=/static/
MEDIA_ROOT=media
MEDIA_URL=/media/

# Monitoring and error tracking (optional)
SENTRY_DSN=

# Security settings (for production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Railway deployment settings (automatically provided)
# RAILWAY_STATIC_URL=
# RAILWAY_PUBLIC_DOMAIN=

# Development tools
DJANGO_SETTINGS_MODULE=cfmp.settings.development

# Application metadata
VERSION=1.0.0
APP_NAME=CFMP
APP_DESCRIPTION=Community Food Management Platform